
<view class="counter {{style}}">
  <button size="mini" data-wpy-evt="15-5" bindtap="_proxy">  +  </button>
  <button size="mini" data-wpy-evt="15-6" bindtap="_proxy">  -  </button>
  <button size="mini" data-wpy-evt="15-7" bindtap="_proxy">  INCREMENT  </button>
  <button size="mini" data-wpy-evt="15-8" bindtap="_proxy">  DECREMENT  </button>
  <button size="mini" data-wpy-evt="15-9" bindtap="_proxy">  ASYNC INCREMENT  </button>
  <label class="count"> {{counter}} </label>
</view>
